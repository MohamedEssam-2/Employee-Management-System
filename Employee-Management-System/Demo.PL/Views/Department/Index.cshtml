@model IEnumerable<Department_Dto>

<h1>All Departments</h1>

<a class="btn btn-primary m-3" asp-controller="Department" asp-action="Create">Create New Department</a>
<br />

<div class="m-2">
    <form asp-action="index" class="row offset-2"  method="get">
        <div class="col-8">
            <input  class="form-control" type="text" name="DepartmenSearchName" placeholder="Search Departmen By Name"/>
        </div>
        <div class="col-4">
            <input  type="submit" class="btn btn-outline-success" value="Search"/>

        </div>
    </form>

</div>
@if (Model.Count()>0)
{
            <table  class="table table-hover m-2">
            <thead class="text-center">
                <tr>
                    <th>@Html.DisplayNameFor(d => d.Name)</th>
                    <th>@Html.DisplayNameFor(d => d.Code)</th>
                    <th>@Html.DisplayNameFor(d => d.Description)</th>
                    <th>@Html.DisplayNameFor(d => d.DateOfCreation)</th>
                    <th>Details</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>

            <tbody>
            @foreach (var d in Model)
            {
                        <tr>
                            <td>@d.Name</td>
                            <td>@d.Code</td>
                            <td>@d.Description</td>
                            <td>@d.DateOfCreation</td>
                           @*Render PartialView*@ 
                            @* @Html.Partial("_DetailsEditPartialView", d) *@
                                   
                                    @* @{ *@
                            @* Html.RenderPartial("_DetailsEditPartialView", d); *@
                            @* } *@
                           
                        
                                 <partial name="_DetailsEditPartialView" model="d.Dept_Id.ToString()" ></partial>
                           
                            <td>
                                        <button
          type="button"
          class="btn btn-danger"
          data-bs-toggle="modal"
          data-bs-target="#DeleteModal-@d.Dept_Id"
        >
          <i class="fas fa-trash"></i> Delete
        </button>

        <div
          class="modal fade"
          id="DeleteModal-@d.Dept_Id"
          tabindex="-1"
          aria-labelledby="exampleModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">
                  Delete Department
                </h1>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">Are You Sure to Delete this Department?</div>
              <div class="modal-footer">
                <form
                  asp-action="Delete"
                  asp-controller="Department"
                  asp-route-id="@d.Dept_Id"
                  class="mt-4"
                >
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Close
                  </button>
                  <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
              </div>
            </div>
          </div>
        </div>

                            </td>
                        </tr>
            }
            </tbody>
        </table>
}
else
{
        <div class="alert alert-info mt-2">
            <h2>No Department Found</h2>
        </div>
}
